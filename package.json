{
  "name": "weather-mcp-server",
  "version": "1.0.0",
  "description": "A robust Weather MCP Server in TypeScript",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "dev": "nodemon --exec ts-node src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "jest",
    "test:weather": "npm run build && node dist/scripts/test-weather.js",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:migrate": "npm run build && node dist/scripts/migrate.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/glaucia86/weather-mcp-server.git"
  },
  "keywords": [
    "weather",
    "mcp",
    "server",
    "typescript",
    "nodejs",
    "api",
    "modelcontextprotocol"
  ],
  "author": "Glaucia Lemos <Twitter: @glaucia_lemos86>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/glaucia86/weather-mcp-server/issues"
  },
  "homepage": "https://github.com/glaucia86/weather-mcp-server#readme",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.2",
    "axios": "^1.11.0",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "pg": "^8.16.3",
    "winston": "^3.17.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.2.1",
    "@types/pg": "^8.15.5",
    "express-rate-limit": "^8.0.1",
    "helmet": "^8.1.0",
    "jest": "^30.0.5",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  }
}
